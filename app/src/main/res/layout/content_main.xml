<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.example.commsimac1.loadgrabber.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="350px"
        android:layout_height="350px"
        android:background="@mipmap/ic_ip6"
        android:id="@+id/imageView2" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:text="Device # 1 : 09330264034"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_devicenum"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Load Balance:"
                android:id="@+id/textView_loadbalance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Php 20.00"
                android:id="@+id/textView_load" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="191dp"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inquire"
                    android:id="@+id/button"
                    android:onClick="btnInquirePressed"/>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRAB"
                    android:onClick="btnGrabPressed"
                    android:id="@+id/button2" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
